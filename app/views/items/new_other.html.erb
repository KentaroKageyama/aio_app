<%= render "shared/header" %>

<div class="tab_wrap">
	<input id="tab1" type="radio" name="tab_btn" checked>
	<input id="tab2" type="radio" name="tab_btn">
	<input id="tab3" type="radio" name="tab_btn">
	<input id="tab4" type="radio" name="tab_btn">

	<div class="tab_area">
		<label class="tab1_label" for="tab1">シリーズ</label>
		<label class="tab2_label" for="tab2">カテゴリー</label>
		<label class="tab3_label" for="tab3">金具材質</label>
  	<label class="tab4_label" for="tab4">オパールカラー</label>
	</div>

	<div class="panel_area">

		<div id="panel1" class="tab_panel">
      <div class="other-container">
        <div class="sub-title">
          <h2><i class="fas fa-square"></i>シリーズ登録</h2>
        </div>

        <%= form_with model: @collection, url: collections_path, method: :post, local: true, class:"registration-form" do |f| %>
          <p class="parts-subtitle">シリーズ</p>
          <p><%= f.text_field :name, placeholder:"シリーズ名", class:"other-form" %><%= f.submit '登録' , class:"item-regi-submit" %></p>
        <% end %>

        <div class="sub-title">
          <h2><i class="fas fa-square"></i>並べ替えリスト</h2>
        </div>
        <div class="sort-box">
          <ul id="collection_ul" class="sort_ul">
            <% @collections.each do |cole| %>
              <li class="collection_li sort_li">
                <div class="sort-main-block">
                  <i class="fas fa-grip-lines-vertical handle"></i>
                  <%= cole.name %>
                </div>
                <div class="sort-btn-block">
                  <%= link_to '削除', collection_path(cole.id), method: :delete, class:"sort-delete-btn" %>
                  <%= link_to '編集', edit_collection_path(cole.id), class:"sort-edit-btn" %>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>

		<div id="panel2" class="tab_panel">
      <div class="other-container">
        <div class="sub-title">
          <h2><i class="fas fa-square"></i>カテゴリー登録</h2>
        </div>

        <%= form_with model: @category, url: categories_path, method: :post, local: true, class:"registration-form" do |f| %>
          <p class="parts-subtitle">カテゴリー</p>
          <p><%= f.text_field :name, placeholder:"カテゴリー名", class:"other-form" %><%= f.submit '登録' , class:"item-regi-submit" %></p>
        <% end %>

        <div class="sub-title">
          <h2><i class="fas fa-square"></i>並べ替えリスト</h2>
        </div>
        <div class="sort-box">
          <ul id="category_ul" class="sort_ul">
            <% @categories.each do |cate| %>
              <li class="category_li sort_li">
                <div class="sort-main-block">
                  <i class="fas fa-grip-lines-vertical handle"></i>
                  <%= cate.name %>
                </div>
                <div class="sort-btn-block">
                  <%= link_to '削除', category_path(cate.id), method: :delete, class:"sort-delete-btn" %>
                  <%= link_to '編集', edit_category_path(cate.id), class:"sort-edit-btn" %>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
  	</div>

		<div id="panel3" class="tab_panel">
      <div class="other-container">
        <div class="sub-title">
          <h2><i class="fas fa-square"></i>金具材質登録</h2>
        </div>

        <%= form_with model: @material, url: materials_path, method: :post, local: true, class:"registration-form" do |f| %>
          <p class="parts-subtitle">金具材質</p>
          <p><%= f.text_field :name, placeholder:"金具材質名", class:"other-form" %><%= f.submit '登録' , class:"item-regi-submit" %></p>
        <% end %>

        <div class="sub-title">
          <h2><i class="fas fa-square"></i>並べ替えリスト</h2>
        </div>
        <div class="sort-box">
          <ul id="material_ul" class="sort_ul">
            <% @materials.each do |mate| %>
              <li class="material_li sort_li">
                <div class="sort-main-block">
                  <i class="fas fa-grip-lines-vertical handle"></i>
                  <%= mate.name %>
                </div>
                <div class="sort-btn-block">
                  <%= link_to '削除', material_path(mate.id), method: :delete, class:"sort-delete-btn" %>
                  <%= link_to '編集', edit_material_path(mate.id), class:"sort-edit-btn" %>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
		</div>

    <div id="panel4" class="tab_panel">
      <div class="other-container">
        <div class="sub-title">
          <h2><i class="fas fa-square"></i>オパールカラー登録</h2>
        </div>

        <%= form_with model: @opal_color, url: opal_colors_path, method: :post, local: true, class:"registration-form" do |f| %>
          <p class="parts-subtitle">オパールカラー</p>
          <p><%= f.text_field :color, placeholder:"オパールカラー名", class:"other-form" %><%= f.submit '登録' , class:"item-regi-submit" %></p>
        <% end %>

        <div class="sub-title">
          <h2><i class="fas fa-square"></i>並べ替えリスト</h2>
        </div>
        <div class="sort-box">
          <ul id="opal_ul" class="sort_ul"> 
            <% @opal_colors.each do |opal| %>
              <li class="opal_li sort_li">
                <div class="sort-main-block">
                  <i class="fas fa-grip-lines-vertical handle"></i>
                  <%= opal.color %>
                </div>
                <div class="sort-btn-block">
                  <%= link_to '削除', opal_color_path(opal.id), method: :delete, class:"sort-delete-btn" %>
                  <%= link_to '編集', edit_opal_color_path(opal.id), class:"sort-edit-btn" %>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
		</div>

	</div>
</div>
