<div class="container">
<h1>トップページ</h1>
<br>

<ul id="item_ul" class="sort_ul">
  <% @items.each do |item| %>
    <li class="item_li sort_li">
      <i class="fas fa-grip-lines-vertical handle"></i>
      <%= item.name %><%= link_to '削除', item_path(item.id), method: :delete %>
    </li>
  <% end %>
</ul>


</div>
