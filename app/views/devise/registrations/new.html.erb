<%= render "shared/second-header" %>

<%= form_with model: @user, url: user_registration_path, method: :post, class: 'registration-main', local: true do |f| %>
  <div class='form-wrap'>
    <div class='form-header'>
      <h1 class='form-header-text'>
        会員情報編集
      </h1>
    </div>

      <%# <%= render 'shared/error_messages', model: f.object %>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">メールアドレス</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
      <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード(確認)</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
    </div>

    <div class='form-box'>
      <h1 class='input-haedline'>
        <i class="fas fa-square"></i>
        会社情報
      </h1>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">会社名</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :company, class:"input-default", id:"company", placeholder:"例）Aio株式会社" %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">電話番号(ハイフンなし半角数字のみ)</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :phone_number, class:"input-default", id:"phone-number", placeholder:"例）09012345678",maxlength:"11"%>
      </div>
    </div>

    <div class='form-box'>
      <h1 class='input-haedline'>
        <i class="fas fa-square"></i>
        会社住所
      </h1>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">郵便番号(ハイフンなし半角数字のみ)</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :zip_code, class:"input-default", id:"postal-code", placeholder:"例）123-4567", maxlength:"7" %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">都道府県</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"prefecture"}) %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">市区町村</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :city, class:"input-default", id:"city", placeholder:"例）横浜市緑区"%>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">番地</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :address, class:"input-default", id:"addresses", placeholder:"例）青山1-1-1"%>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">建物名</label>
          <span class="form-any">任意</span>
        </div>
        <%= f.text_field :building, class:"input-default", id:"building", placeholder:"例）柳ビル103"%>
      </div>
    </div>
        
    <div class='form-box'>
      <h1 class='input-haedline'>
        <i class="fas fa-square"></i>
        請求書振込先
      </h1>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">銀行名</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :bank, class:"input-default", id:"bank", placeholder:"例）Aio銀行" %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">支店名</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :branch, class:"input-default", id:"branch", placeholder:"例）Aio支店" %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">口座種別</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:bank_type_id, BankType.all, :id, :name, {}, {class:"select-box", id:"bank-type"}) %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">口座番号</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :bank_number, class:"input-default", id:"bank-number", placeholder:"例）1234567", maxlength:"7" %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">口座名義（カナ）</label>
          <span class="form-any">必須</span>
        </div>
        <%= f.text_field :bank_account, class:"input-default", id:"bank-account", placeholder:"例）カ）エーアイオー" %>
      </div>
    </div>

    <div class='form-btn-post'>
      <%= f.submit "変更する", class:"form-btn" %>
    </div>
    
  </div>
<% end %>

<%= render "shared/second-footer" %>

